<!DOCTYPE html>
<html>
  <head>
    <title>BrassMatch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag 'new', media: 'all' %>
  </head>

  <body>
    <header class="site-header">
      <div class="logo">
        <%= link_to "BrassMatch", root_path, class: "logo-link" %>
      </div>
     <nav class="main-nav">
  　 <%= link_to "ホーム", perfumes_path, class: "nav-link" %>
     <%= link_to "コメント", root_path %>
  
  <% if user_signed_in? %>
    <%= link_to "マイページ", edit_user_registration_path %>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" } , class: "nav-link"%>
  <% else %>
    <%= link_to new_user_session_path, class: "login-icon" do %>
  <i class="fas fa-user"></i>
  <% end %>
  
<% end %>

    </nav>
    </header>

    

    <main>
      <%= yield %>
    </main>
  </body>
</html>



