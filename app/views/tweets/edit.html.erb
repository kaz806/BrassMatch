<div class="page-wrapper">
<h1>投稿を編集する</h1>

<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :music, "曲名" %><br>
    <%= f.text_field :music, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :detail, "コメント" %><br>
    <%= f.text_area :detail, size: "30x2" %>
  </div>

  <%= f.submit "更新する", class: "submit-button" %>
<% end %>

<%= link_to "一覧に戻る", tweets_path, class: "back-link" %>
</div>