<h2>パスワードを変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :パスワード, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上入力してください)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード" %>
  </div>

  <div class="field">
    <%= f.label :pパスワードを確認する, "新しいパスワードを確認する" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
