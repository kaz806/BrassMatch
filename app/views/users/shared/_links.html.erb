<% unless controller_name == "registrations" && action_name == "new" %>
  <%= link_to "ログインする", new_session_path(resource_name), class: "login-link" %><br>
  <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "forgot-link" %><br>
  <%= link_to "新規登録する", new_registration_path(resource_name), class: "signup-link" %><br>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "メールが届かない場合はこちら", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "メールが届かない場合はこちら", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "ログインする #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
