<div class="login-wrapper">
  <h2 class="login-title">ログイン</h2>

<div class="login-wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "現在のパスワード" %>
    </div>

   <% if devise_mapping.rememberable? %>
     <div class="field remember-row">
       <%= f.check_box :remember_me, id: "user_remember_me" %>
       <%= f.label :remember_me, "ログイン状態を保持する" %>
     </div>
   <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>